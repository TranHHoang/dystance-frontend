{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "~app/*": ["app/*"],
      "~utils/*": ["utils/*"]
    },
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules/*"]
}
